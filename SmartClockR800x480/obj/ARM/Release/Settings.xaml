<Page
    x:Class="SmartClock.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmartClock"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" RequestedTheme="Dark" Width="800" Height="480">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <Border Grid.Row="0" Background="#D000" Height="60">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:ConnectionId='3' x:Name="pageTitle" 
                           Margin="0,0,0,0" 
                           FontSize="35" 
                           HorizontalAlignment="Center" 
                           Foreground="#EEEADCDC">
                    <Run Text="Pro|ject "/>
                    <Run Text="L"/>
                    <Run Text="iːəʊ: ðə "/>
                    <Run Text="S"/>
                    <Run Text="mɑːt"/>
                    <Run Text=" "/>
                    <Run Text="K"/>
                    <Run Text="lɒk"/>
                    <Run Text=" "/>
                    <Run Text="Prot"/>
                    <Run Text="otype"/>
                    <Run Text=" "/>
                    <Run Text="V1.0"/>
                </TextBlock>
            </Grid>
        </Border>

        <!-- Copyright -->
        <Grid Grid.Row="1">
            <TextBlock HorizontalAlignment="Center" 
                       VerticalAlignment="Top" 
                       Margin="0,0,0,0" FontSize="15" 
                       Foreground="#EEEADCDC">
                © 2017 Myron Richard Dennison
            </TextBlock>
        </Grid>

        <Grid Grid.Row="2">
            <TextBlock HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Margin="0,0,0,0" FontSize="45" 
                       Foreground="#EEEADCDC">
                Work In Progress
            </TextBlock>
        </Grid>

        <!-- System Status Message -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <TextBlock x:ConnectionId='1' x:Name="SystemStatusTb" 
                       Grid.Column="0" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Bottom" 
                       FontSize="15" 
                       Foreground="#EEEADCDC" 
                       Margin="10,10,10,10">
                System Status: 
            </TextBlock>
            <Button x:ConnectionId='2' Name="HomeBtn" 
                    Content="" 
                    Margin="10,10,10,10" 
                                                              
                    Grid.Column="1" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom"                     
                    Width="40" Height="40" 
                    HorizontalContentAlignment="Right" 
                    VerticalContentAlignment="Bottom" Style="{StaticResource ButtonStyleForSIAPS}">
                <Button.Background>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/Home-icon.png"/>
                </Button.Background>
            </Button>
        </Grid>
    </Grid>
</Page>

