<Page
    x:Class="SIAPS.GaugesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="RadialGauge" TargetType="controls:RadialGauge">
            <Setter Property="UseSystemFocusVisuals" Value="true" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="MinAngle" Value="-180" />
            <Setter Property="MaxAngle" Value="90" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="controls:RadialGauge">
                        <Viewbox>
                            <Grid x:Name="PART_Container" 
                                  Height="200"
                                  Width="200"
                                  Background="Transparent">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <!-- Scale -->
                                <Path Name="PART_Scale"
                                    Stroke="{TemplateBinding ScaleBrush}"
                                    StrokeThickness="{TemplateBinding ScaleWidth}"
                                    Grid.ColumnSpan="2"
                                    Grid.RowSpan="2" />

                                <!-- Trail -->
                                <Path Name="PART_Trail"
                                    Stroke="{TemplateBinding TrailBrush}"
                                    StrokeThickness="{TemplateBinding ScaleWidth}"
                                    Grid.ColumnSpan="2"
                                    Grid.RowSpan="2" />

                                <!-- Value and Unit -->
                                <TextBlock Name="PART_ValueText"
                                    Foreground="{TemplateBinding ValueBrush}"
                                    FontSize="40"
                                    FontWeight="SemiBold"
                                    Text="{TemplateBinding Value}"
                                    TextAlignment="Center"
                                    VerticalAlignment="Center"
                                    Grid.Column="1"
                                    Grid.Row="1" />
                                <TextBlock Foreground="{TemplateBinding UnitBrush}"
                                    FontSize="16"
                                    FontWeight="Light"
                                    TextAlignment="Right"
                                    Text="{TemplateBinding Unit}"
                                    VerticalAlignment="Top"
                                    Margin="0 2 0 0"
                                    Grid.Column="1"
                                    Grid.Row="1" />
                            </Grid>
                        </Viewbox>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" RequestedTheme="Dark" Width="800" Height="480">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="auto"/>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- Page Title -->

        <!-- Copyright -->

        <!-- Gauges 1-3 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <controls:RadialGauge x:ConnectionId='13'   x:Name="WTRadialGauge" 
                                    IsInteractive="{Binding IsInteractive.Value, Mode=OneWay}"
                                    MaxAngle="{Binding MaxAngle.Value, Mode=OneWay}"                                
                                    MinAngle="{Binding MinAngle.Value, Mode=OneWay}"
                                    Maximum="60"
                                    Minimum="{Binding Minimum.Value, Mode=OneWay}"
                                    NeedleWidth="{Binding NeedleWidth.Value, Mode=OneWay}"
                                    ScaleTickBrush="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                                    ScaleWidth="{Binding ScaleWidth.Value, Mode=OneWay}"
                                    StepSize="1"
                                    TickBrush="Gainsboro"
                                    TickLength="{Binding TickLength.Value, Mode=OneWay}"
                                    TickSpacing="5"
                                    Unit="°C"
                                    UnitBrush="White"
                                    ValueBrush="White"
                                    Value="30"                                    
                                    Grid.Column="0">
            </controls:RadialGauge>
            <controls:RadialGauge x:ConnectionId='14'   x:Name="ATRadialGauge" 
                                    IsInteractive="{Binding IsInteractive.Value, Mode=OneWay}"
                                    MaxAngle="{Binding MaxAngle.Value, Mode=OneWay}"                                
                                    MinAngle="{Binding MinAngle.Value, Mode=OneWay}"
                                    Maximum="60"
                                    Minimum="{Binding Minimum.Value, Mode=OneWay}"
                                    NeedleWidth="{Binding NeedleWidth.Value, Mode=OneWay}"
                                    ScaleTickBrush="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                                    ScaleWidth="{Binding ScaleWidth.Value, Mode=OneWay}"
                                    StepSize="1"
                                    TickBrush="Gainsboro"
                                    TickLength="{Binding TickLength.Value, Mode=OneWay}"
                                    TickSpacing="5"
                                    Unit="°C"
                                    UnitBrush="White"
                                    ValueBrush="White"
                                    Value="30" 
                                    Grid.Column="1">
            </controls:RadialGauge>
            <controls:RadialGauge x:ConnectionId='15'   x:Name="RHRadialGauge" 
                                    IsInteractive="{Binding IsInteractive.Value, Mode=OneWay}"
                                    MaxAngle="{Binding MaxAngle.Value, Mode=OneWay}"                                
                                    MinAngle="{Binding MinAngle.Value, Mode=OneWay}"
                                    Maximum="{Binding Maximum.Value, Mode=OneWay}"
                                    Minimum="{Binding Minimum.Value, Mode=OneWay}"
                                    NeedleWidth="{Binding NeedleWidth.Value, Mode=OneWay}"
                                    ScaleTickBrush="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                                    ScaleWidth="{Binding ScaleWidth.Value, Mode=OneWay}"
                                    StepSize="1"
                                    TickBrush="Gainsboro"
                                    TickLength="{Binding TickLength.Value, Mode=OneWay}"
                                    TickSpacing="{Binding TickSpacing.Value, Mode=OneWay}"
                                    Unit="%"
                                    UnitBrush="White"
                                    ValueBrush="White"
                                    Value="65"                                    
                                    Grid.Column="2">
            </controls:RadialGauge>            
        </Grid>

        <!-- Sensor Names 1-3-->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock x:ConnectionId='10' x:Name="WaterTemp" Grid.Column="0" HorizontalAlignment="Center" Foreground="White" FontSize="20">WTemp</TextBlock>
            <TextBlock x:ConnectionId='11' x:Name="AmbientTemp" Grid.Column="1" HorizontalAlignment="Center" Foreground="White" FontSize="20">ATemp</TextBlock>
            <TextBlock x:ConnectionId='12' x:Name="RelativeHumidity" Grid.Column="2" HorizontalAlignment="Center" Foreground="White" FontSize="20">RH</TextBlock>
        </Grid>

        <!-- Gauges 4-6 -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>            
            <controls:RadialGauge x:ConnectionId='7'   x:Name="FRRadialGauge" 
                                    IsInteractive="{Binding IsInteractive.Value, Mode=OneWay}"
                                    MaxAngle="{Binding MaxAngle.Value, Mode=OneWay}"                                
                                    MinAngle="{Binding MinAngle.Value, Mode=OneWay}"
                                    Maximum="2000"
                                    Minimum="{Binding Minimum.Value, Mode=OneWay}"
                                    NeedleWidth="{Binding NeedleWidth.Value, Mode=OneWay}"
                                    ScaleTickBrush="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                                    ScaleWidth="{Binding ScaleWidth.Value, Mode=OneWay}"
                                    StepSize="1"
                                    TickBrush="Gainsboro"
                                    TickLength="{Binding TickLength.Value, Mode=OneWay}"
                                    TickSpacing="100"
                                    Unit="L/hr"
                                    UnitBrush="White"
                                    ValueBrush="White"
                                    Value="999"                                    
                                    Grid.Column="0">
            </controls:RadialGauge>
            <controls:RadialGauge x:ConnectionId='8'   x:Name="PHRadialGauge" 
                                    IsInteractive="{Binding IsInteractive.Value, Mode=OneWay}"
                                    MaxAngle="{Binding MaxAngle.Value, Mode=OneWay}"                                
                                    MinAngle="{Binding MinAngle.Value, Mode=OneWay}"
                                    Maximum="14"
                                    Minimum="{Binding Minimum.Value, Mode=OneWay}"
                                    NeedleWidth="{Binding NeedleWidth.Value, Mode=OneWay}"
                                    ScaleTickBrush="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                                    ScaleWidth="{Binding ScaleWidth.Value, Mode=OneWay}"
                                    StepSize="1"
                                    TickBrush="Gainsboro"
                                    TickLength="{Binding TickLength.Value, Mode=OneWay}"
                                    TickSpacing="1"
                                    Unit="mol/L"
                                    UnitBrush="White"
                                    ValueBrush="White"
                                    Value="7.1"                                    
                                    Grid.Column="1">
            </controls:RadialGauge>
            <controls:RadialGauge x:ConnectionId='9'   x:Name="DORadialGauge" 
                                    IsInteractive="{Binding IsInteractive.Value, Mode=OneWay}"
                                    MaxAngle="{Binding MaxAngle.Value, Mode=OneWay}"                                
                                    MinAngle="{Binding MinAngle.Value, Mode=OneWay}"
                                    Maximum="14.0"
                                    Minimum="{Binding Minimum.Value, Mode=OneWay}"
                                    NeedleWidth="{Binding NeedleWidth.Value, Mode=OneWay}"
                                    ScaleTickBrush="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                                    ScaleWidth="{Binding ScaleWidth.Value, Mode=OneWay}"
                                    StepSize="1"
                                    TickBrush="Gainsboro"
                                    TickLength="{Binding TickLength.Value, Mode=OneWay}"
                                    TickSpacing="1"
                                    Unit="mg/L"
                                    UnitBrush="White"
                                    ValueBrush="White"
                                    Value="6.9"                                    
                                    Grid.Column="2">
            </controls:RadialGauge>
        </Grid>

        <!-- Sensor Names 4-6 -->
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>                
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>            
            <TextBlock x:ConnectionId='4' x:Name="FlowRate" Grid.Column="0" HorizontalAlignment="Center" Foreground="White" FontSize="20">FR</TextBlock>
            <TextBlock x:ConnectionId='5' x:Name="pH" Grid.Column="1" HorizontalAlignment="Center" Foreground="White" FontSize="20">pH</TextBlock>
            <TextBlock x:ConnectionId='6' x:Name="DissolvedOxygen" Grid.Column="2" HorizontalAlignment="Center" Foreground="White" FontSize="20">DO2</TextBlock>
        </Grid>

        <!-- System Status Message -->
        <Grid Grid.Row="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <TextBlock x:ConnectionId='1' x:Name="txtStatus" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="15" Foreground="#EEEADCDC" Margin="10,10,10,10">Status:</TextBlock>
            <Button x:ConnectionId='2' Name="HomeBtn" 
                    Content="HOME" 
                    Margin="10,10,10,10" 
                                          
                                           
                    Grid.Column="1" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center" 
                    FontSize="20" FontWeight="Bold" 
                    Foreground="#EEEADCDC" 
                    Background="#FF4D4C4B" 
                    FontFamily="Segoe UI">                
            </Button>
            <Button x:ConnectionId='3' Name="SettingsBtn" 
                    Content="SETTINGS" 
                    Margin="10,10,10,10" 
                                              
                                               
                    Grid.Column="2" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center" 
                    FontSize="20" 
                    FontWeight="Bold" 
                    Foreground="#EEEADCDC" 
                    Background="#FF4D4C4B" 
                    FontFamily="Segoe UI">                
            </Button>
        </Grid>    
    </Grid>
</Page>

