<Page 
    x:Class="SmartClock.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"      
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" RequestedTheme="Dark" Width="800" Height="480">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#D000" Height="60">
            <Grid>
                <TextBlock x:ConnectionId='8' x:Name="pageTitle" 
                           Margin="0,0,0,0" 
                           FontSize="30" 
                           HorizontalAlignment="Center" 
                           Foreground="#EEEADCDC">
                    Pro|ject Liːəʊ: ðə Smɑːt Klɒk Prototype V1.0
                </TextBlock>
            </Grid>
        </Border>

        <!-- Copyright -->


        <!-- Date Time -->
        <Grid Grid.Row="2">
            <StackPanel>
                <TextBlock x:ConnectionId='3' x:Name="Lbl_Date" 
                           Foreground="#EE35EA0D" 
                           FontSize="40" 
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Center">
                    April 07, 2005
                </TextBlock>
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="75" />
                    </Grid.ColumnDefinitions>
                    <TextBlock x:ConnectionId='5' x:Name="Lbl_Time" 
                               Grid.Column="1"
                               Foreground="#EEEADCDC" 
                               FontSize="145"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                            01:27 AM
                    </TextBlock>
                    <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,15,0,0">
                        <RadioButton x:ConnectionId='6' x:Name="TwelveHrBtn" 
                                     Content="12-HR" 
                                                                   
                                     VerticalContentAlignment="Top" 
                                     VerticalAlignment="Bottom"/>
                        <RadioButton x:ConnectionId='7' x:Name="TwentyFourHrBtn" 
                                     Content="24-HR" 
                                                                       
                                     VerticalContentAlignment="Top" 
                                     VerticalAlignment="Bottom"/>
                    </StackPanel>
                </Grid>
                <TextBlock x:ConnectionId='4' x:Name="Lbl_Location" 
                        Foreground="#EE35EA0D" 
                        FontSize="40" 
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center">
                    Singapore, Singapore
                </TextBlock>
            </StackPanel>
        </Grid>

        <!-- Enable Speech Recognizer -->
        <Grid Grid.Row="3"/>

        <!-- Footer -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock x:ConnectionId='1' x:Name="SystemStatusTb" 
                       Grid.Column="0" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Bottom" 
                       FontSize="15" 
                       Foreground="#EEEADCDC" 
                       Margin="10,10,10,10">
                System Status:
            </TextBlock>
            <Button x:ConnectionId='2' Name="SettingsBtn" 
                    Content="" 
                    Margin="10,10,10,10" 
                                             
                    Grid.Column="2"
                    Height="40" Width="40"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom"                     
                    VerticalContentAlignment="Bottom" 
                    HorizontalContentAlignment="Right" Style="{StaticResource ButtonStyleForSIAPS}">
                <Button.Background>
                    <ImageBrush ImageSource="Assets/Settings-icon.png"/>
                </Button.Background>
            </Button>
        </Grid>
    </Grid>
</Page>

