<Page 
    x:Class="SmartClock.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"      
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" RequestedTheme="Dark" Width="800" Height="480">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>            
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#D000" Height="60">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="pageTitle" 
                           Grid.Column="1"
                           Margin="0,0,0,0" 
                           FontSize="30" 
                           HorizontalAlignment="Center" 
                           Foreground="#EEEADCDC">
                    Pro|ject Liːəʊ: ðə Smɑːt Klɒk
                </TextBlock>
                <Button Name="PowerBtn" 
                            Content="" 
                            Grid.Column="2"
                            Margin="0,0,10,0" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center"                     
                            Width="40" Height="40">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="Restart" Click="Restart_Click"/>
                            <MenuFlyoutItem Text="Shutdown" Click="Shutdown_Click"/>
                        </MenuFlyout>
                    </Button.Flyout>
                    <Button.Background>
                        <ImageBrush Stretch="Fill" ImageSource="Assets/powerbutton.png"/>
                    </Button.Background>
                </Button>
            </Grid>
        </Border>

        <!-- Date Time -->
        <Grid Grid.Row="2">
            <StackPanel>
                <TextBlock x:Name="Lbl_Date" 
                           Foreground="#EE35EA0D" 
                           FontSize="40" 
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Center">
                    Thursday, April 07, 2005
                </TextBlock>
                <Grid VerticalAlignment="Center">                    
                    <TextBlock x:Name="Lbl_Time"                               
                               Foreground="#EEEADCDC" 
                               FontSize="140"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                            01:27:00 AM
                    </TextBlock>                    
                </Grid>
                <TextBlock x:Name="Lbl_Location" 
                        Foreground="#EE35EA0D" 
                        FontSize="40" 
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center">
                    Singapore, Singapore
                </TextBlock>
            </StackPanel>
        </Grid>        

        <!-- Footer -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="SystemStatusTb" 
                       Grid.Column="0" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Bottom" 
                       FontSize="15" 
                       Foreground="#EEEADCDC" 
                       Margin="10,10,10,10">
                System Status:
            </TextBlock>
            <TextBlock Grid.Column="1" 
                       HorizontalAlignment="Right" 
                       VerticalAlignment="Center" 
                       FontSize="15" 
                       Foreground="#EEEADCDC" 
                       Margin="10,10,10,10">
                © 2017 Myron Richard Dennison
            </TextBlock>
        </Grid>
    </Grid>
</Page>
